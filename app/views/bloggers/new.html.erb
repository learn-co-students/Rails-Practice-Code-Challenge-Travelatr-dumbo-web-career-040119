<%= render 'header' %>

<h1>Become a blogger! </h1>
<ol class="errors">
  <% @blogger.errors.full_messages.each do |error| %>
  <li><%= error %></li>
  <% end %>
</ol>

<%= form_for @blogger do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :bio %>
<%= f.text_area :bio %>
<%= f.label :age %>
<%= f.number_field :age %>

<%= f.submit %>

<% end %>
